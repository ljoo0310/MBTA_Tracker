<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/linLay_visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_startStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Start Stop"
                android:textColor="@color/black"
                android:textSize="16sp"/>
                <!--android:padding="10dp"-->

            <TextView
                android:id="@+id/tv_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="=>" />

            <TextView
                android:id="@+id/tv_endStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="End Stop"
                android:textColor="@color/black"
                android:textSize="16sp"/>
                <!--android:padding="10dp"-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLay_hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linLay_visible"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_departureTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="00:00:00"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_arrow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=""
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_arrivalTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="23:59:59"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>